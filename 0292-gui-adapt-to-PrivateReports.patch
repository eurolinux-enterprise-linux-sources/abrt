--- a/src/gui-gtk/main.c
+++ b/src/gui-gtk/main.c
@@ -60,6 +60,11 @@ enum
     NUM_COLUMNS
 };
 
+enum
+{
+    MW_PRIVATE_REPORTS_WARNING = 1 << 0,
